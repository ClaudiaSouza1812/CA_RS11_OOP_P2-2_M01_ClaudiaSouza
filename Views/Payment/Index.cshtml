@model IEnumerable<P02_2_ASP.NET_Core_MVC_M01_ClaudiaSouza.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Payments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contract.ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract.Client.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract.Client.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTotalValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contract.ContractId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract.Client.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTotalValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
